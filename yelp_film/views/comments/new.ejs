<%include ../partials/header%>
<div class="container">
    <div class="row">
        <h1 style="text-align:center;" >Add new comments to <%=film.name%></h1>
        <div style="width:30% ;margin:25px auto;">
            <form action="/films/<%=film._id%>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <!--<input class="form-control" type="text" name="comment[rating]" placeholder="rating">-->
                      <select name="comment[rating]">
                        <option value="0">Not watched yet</option>
                        <option value="1">1-terrible</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5-perfect</option>
                      </select>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-large btn-block btn-primary" value="Submit">
                </div>
            </form>
            <a href="/films">Back</a>
        </div>
        
    </div>

</div>
<%include ../partials/footer%>