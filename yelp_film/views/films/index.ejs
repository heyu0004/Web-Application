<%include ../partials/header%>
<!--<h4><%=currentUser%></h4>-->
<div class="container">
    <header class="jumbotron">
    <div class="container">
        <h1>Welcome to Yelpfilm</h1>
        <p>View film reviews around the world</p>
        <p>
            <a class="btn btn-primary btn-large" href="/films/new2">Add New Film</a>
        </p>
    </div>
    </header>
    
    <div class="row text-center" style="display:flex;flex-wrap:wrap;">
    
        <%films.forEach(function(film){%>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail" > 
                <img src="<%=film.image%>">
                <div class="caption">
                    <h4><%=film.name%></h4>
                </div>
                <p>
                    <a href="/films/<%= film._id%>" class="btn btn-primary">More Info</a>
                </p>
            </div>
        </div>
        <%})%>
    </div>

</div>
<%include ../partials/footer%>