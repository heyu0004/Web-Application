<%include ../partials/header%>
<div class="container">
    <div class="row">
        <h1 style="text-align:center;" >Edit <%=film.name%> film</h1>
        <div style="width:30% ;margin:25px auto;">
            <form action="/films/<%=film._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="film[name]" value="<%=film.name%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="film[image]" value="<%=film.image%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="film[description]" value="<%=film.description%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="film[year]" value="<%=film.year%>">
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-large btn-block btn-primary" value="Submit">
                </div>
            </form>
            <a href="/films">Back</a>
        </div>
        
    </div>

</div>
<%include ../partials/footer%>